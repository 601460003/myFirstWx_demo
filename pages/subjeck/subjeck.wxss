/* pages/subjeck/subjeck.wxss */
page{
    background: #f3f5f7;
}
.comment_p {
    padding-top: 10px;
    color: #999;
    font-size: 12px;
    line-height: 16px;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    padding-right: 8px;
}
h3{
    font-weight: normal;
    color: #333;
    font-size: 14px;
    margin-bottom: 15px;
}
.subject_title{
    margin-bottom:40px ;
}
.subject_icon {
    width: 40px;
    height: 40px;
    border-radius: 50px;
    vertical-align: middle;
}
.subject_icon_box{
    padding: 10px;
    margin-top: 15px;
}

.subject_mobile {
    padding-left: 3px;
    font-size: 13px;
}

.subject_content {
    line-height: 10px;
    padding: 0 10px;
}
.subject_img{
    text-align: center;
}
.subject_img image{
    height: 100px;
    width: 100px;
}
.header{
    border-bottom: 1px solid #F4F0EA;
    padding-bottom: 10px;
    margin-bottom: 15px;
    background: #fff;
}